<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ent_externa_lcontact_tree_view" model="ir.ui.view">
        <field name="name">联系人</field>
        <field name="model">ent.external.contact</field>
        <field name="arch" type="xml">
            <tree js_class="ent_externa_lcontact_class">
                <field name="name"/>
                <field name="user_type"/>
                <field name="gender"/>
                <field name="position"/>
                <field name="corp_name"/>
                <field name="corp_full_name"/>
            </tree>
        </field>
    </record>

    <record id="ent_externa_lcontact_form_view" model="ir.ui.view">
        <field name="name">联系人</field>
        <field name="model">ent.external.contact</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" confirm="确认归档本记录，你想继续吗？"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div id="o_employee_container">
                        <div id="o_employee_main">
                            <field name="avatar" class="oe_avatar"/>
                            <div class="oe_title" name="title">
                                <label for="name" class="oe_edit_only"/>
                                <h2>
                                    <field name="name" required="True"/>
                                </h2>
                            </div>
                        </div>
                    </div>
                    <group>
                        <group>
                            <field name="user_type"/>
                            <field name="gender"/>
                            <field name="position"/>
                        </group>
                        <group>
                            <field name="corp_name"/>
                            <field name="corp_full_name"/>
                            <field name="unionid"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="企业成员">
                            <field name="follow_ids">
                                <tree editable="bottom" default_order="sequence">
                                    <field name="ent_user_id" required="1"/>
                                    <field name="user_remark"/>
                                    <field name="user_description"/>
                                    <field name="user_createtime"/>
                                    <field name="remark_corp_name"/>
                                    <field name="remark_mobiles"/>
                                    <field name="externa_state"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="ent_externa_lcontact_action">
        <field name="name">联系人</field>
        <field name="res_model">ent.external.contact</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.ui.view" id="ent_externa_lcontact_search">
        <field name="model">ent.external.contact</field>
        <field name="arch" type="xml">
            <search string="联系人">
                <field name="name"/>
                <field name="user_type"/>
                <field name="gender"/>
                <field name="position"/>
                <field name="corp_name"/>
                <field name="corp_full_name"/>
            </search>
        </field>
    </record>

    <menuitem name="联系人详情" id="ent_externa_lcontact_menu" parent="external_contact_menu" sequence="1" action="ent_externa_lcontact_action"/>

</odoo>