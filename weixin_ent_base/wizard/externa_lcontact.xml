<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ent_externa_lcontact_tran_form_view" model="ir.ui.view">
        <field name="name">获取联系人列表</field>
        <field name="model">ent.external.contact.tran</field>
        <field name="arch" type="xml">
            <form>
                <p>
                    可以获取在企业微信中所有联系人列表，建议勾选获取详情，否则记录只有Id.
                </p>
                <group>
                    <field name="employee_id"/>
                    <field name="is_info"/>
                </group>
                <footer>
                    <button string="立即获取" name="pull_externa_list" type="object" class="oe_highlight"/>
                    <button string="取消" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="ent_externa_lcontact_tran_action" model="ir.actions.act_window">
        <field name="name">获取联系人列表</field>
        <field name="res_model">ent.external.contact.tran</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>